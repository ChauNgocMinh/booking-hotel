@model BookingRoomHotel.ViewModels.DanhSachCauHoiViewModel

@{
    ViewData["Title"] = "EditList";
}


<div class="mt-5">

    <div>
        <a onclick="sendJwt('/Questions/Index','')" class="btn btn-primary">Back to List</a>
    </div>
    @foreach (var item in Model.DanhSachCauHoi)
    {
        <div class="row">
            <div class="col-lg-12">
                <form onsubmit="return sendJwtAndData('/Questions/ListEdit/','@item.MaCauHoi')" id="formData">
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.HoTen" class="control-label"></label>
                                <input asp-for="@item.HoTen" name="Name" class="form-control" readonly />
                                <span asp-validation-for="@item.HoTen" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.Email" class="control-label"></label>
                                <input asp-for="@item.Email" name="Email" class="form-control" readonly/>
                                <span asp-validation-for="@item.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.ChuDe" class="control-label"></label>
                                <input asp-for="@item.ChuDe" name="Subject" class="form-control" readonly />
                                <span asp-validation-for="@item.ChuDe" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.NoiDung" class="control-label"></label>
                                <input asp-for="@item.NoiDung" name="Message" class="form-control" readonly />
                                <span asp-validation-for="@item.NoiDung" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.PhanHoi" class="control-label"></label>
                                <textarea class="form-control" name="Response" rows="5" asp-for="@item.PhanHoi"></textarea>
                                <span asp-validation-for="@item.PhanHoi" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@item.TrangThai" class="control-label"></label>
                                <select class="form-select" name="TrangThai" asp-for="@item.TrangThai">
                                    <option value="" style="display:none;"></option>
                                    <option value="Reject">Reject answer</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Processing">Processing</option>
                                    <option value="Complete">Complete</option>
                                </select>
                                <span asp-validation-for="@item.TrangThai" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary buttonedit1">Send response</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div style="text-align: center ;">
            <p>------------------------------------------------------------</p>
        </div>
    }
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.Count; i++)
            {
                <li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="return pagination('/Questions/ListEdit/' + '@i')">@i</a></li>
            }
        </ul>
    </nav>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}