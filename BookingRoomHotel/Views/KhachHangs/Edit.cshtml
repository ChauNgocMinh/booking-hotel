@model BookingRoomHotel.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
}
<div class="mt-5">
    <div>
        <form onsubmit="return sendJwtAndData('/KhachHangs/Edit/', '@Model.MaKhachHang')" id="formData">
            <div class="col-xl-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <a onclick="sendJwt('/KhachHangs/Index','')" class="btn btn-primary m-2">Back to List</a>
                        Profile Customer
                    </div>
                    <div class="card-body d-flex flex-wrap">
                        <div class="col-xl-4">
                            <div class="card mb-4 mb-xl-0">
                                <div class="card-body text-center upload-btn-wrapper">
                                    <img class="img-account-profile rounded-circle mb-2" height="140" width="140" src="~/images/customer/profile/@Model.AnhDaiDien">
                                    <input type="hidden" id="fileInput" style="display: none;" asp-for="AnhDaiDien">
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="col-3 col-md-4 pl-0 mb-3">
                                        <select class="form-select" asp-for="TrangThai">
                                            <option value="Unverified">Unverified</option>
                                            <option value="Verified">Verified</option>
                                            <option value="VIP">VIP</option>
                                            <option value="Lock">Lock</option>
                                        </select>
                                    </div>
                                    <input type="hidden" asp-for="MaKhachHang" />
                                    <input type="hidden" asp-for="MatKhau" />
                                    <input type="hidden" asp-for="TrangThai" />
                                    <input type="hidden" asp-for="AnhCMND2" />
                                    <input type="hidden" asp-for="AnhCMND1" />
                                    <div class="mb-3">
                                        <label class="small mb-1 control-label">Name</label>
                                        <input class="form-control disabled" asp-for="HoTen">
                                        <span asp-validation-for="HoTen" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Email" class="control-label small mb-1"></label>
                                        <input asp-for="Email" class="form-control disabled" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="DiaChi" class="control-label small mb-1"></label>
                                        <input asp-for="DiaChi" class="form-control disabled" />
                                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                                    </div>

                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="SoDienThoai" class="control-label small mb-1"></label>
                                            <input asp-for="SoDienThoai" class="form-control disabled" />
                                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="NgaySinh" class="control-label small mb-1"></label>
                                            <input asp-for="NgaySinh" class="form-control disabled" />
                                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label class="card-title">Picture Identify 1</label>
                                            <div class="d-flex justify-content-center mb-2" width="40" height="160">
                                                <img style="height: 10rem;" class="img-account-profile" src="~/images/customer/AnhCMND1/@Model.AnhCMND1">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="card-title">Picture Identify 2</label>
                                            <div class="d-flex justify-content-center mb-2" width="40" height="160">
                                                <img style="height: 10rem;" src="~/images/customer/AnhCMND2/@Model.AnhCMND2">
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary" type="submit">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

