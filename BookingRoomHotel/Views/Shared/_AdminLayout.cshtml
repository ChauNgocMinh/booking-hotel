<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ADMIN</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/css/assets/img/favicon.png" />
    <link rel="stylesheet" href="~/css/assets/plugins/fontawesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/assets/plugins/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/assets/css/feathericon.min.css" />
    <link rel="stylesheet" href="~/css/assets/plugins/morris/morris.css" />
    <link rel="stylesheet" href="~/css/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/assets/css/style.css" />

    <style>
        .login-wrapper {
            min-height: 85vh;
            display: flex;
            align-items: center;
        }

        .loginbox {
            display: flex;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .login-left {
            background: #f7f7f9;
            padding: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 320px;
        }

            .login-left img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
                object-fit: cover;
            }

        .login-right {
            padding: 32px;
            background: #fff;
            min-width: 360px;
        }

        .account-subtitle {
            color: #6c757d;
            margin-bottom: 18px;
        }

        .forgotpass a {
            color: #6c757d;
            text-decoration: none;
        }

        .modal .modal-header.alert-success {
            background: #dff0d8;
        }

        .modal .modal-header.alert-danger {
            background: #f8d7da;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3" style="z-index:1060;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Bảng điều khiển</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Chuyển đổi điều hướng">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item d-none" id="navStaff">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Nhân viên</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <a class="me-3 fs-7 h-font" id="showName" asp-action="Index" asp-controller="ProfileCustomer"></a>

                        <button type="button" class="btn btn-outline-dark shadow-none me-2 d-none" data-bs-toggle="modal" data-bs-target="#loginModal" id="showLogCus">Đăng nhập</button>

                        <button type="button" class="btn btn-outline-dark shadow-none me-2 d-none" data-bs-toggle="modal" data-bs-target="#registerModal" id="showResCus">Đăng ký</button>

                        <ul class="nav user-menu d-none" id="showUserAuth">
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link position-relative" data-bs-toggle="dropdown"> <i class="fe fe-bell"></i> <span class="badge bg-danger rounded-pill">3</span> </a>
                                <div class="dropdown-menu dropdown-menu-end p-2" style="min-width:320px;">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <strong>Thông báo</strong>
                                        <a href="javascript:void(0)" class="text-decoration-none">Xóa hết</a>
                                    </div>
                                    <div class="list-group list-group-flush">
                                        <a href="#" class="list-group-item list-group-item-action">
                                            <div class="d-flex">
                                                <img src="~/images/Admin/avtAdmin.jpeg" class="rounded-circle me-2" width="40" alt="avt">
                                                <div>
                                                    <div class="small"><strong>Carlson Tech</strong> đã phê duyệt ước tính của bạn</div>
                                                    <div class="text-muted small">4 phút trước</div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="mt-2 text-center"><a href="#" class="text-decoration-none">Xem tất cả thông báo</a></div>
                                </div>
                            </li>

                            <li class="nav-item dropdown ms-2" style="z-index:1060;">
                                <a href="#" class="nav-link" data-bs-toggle="dropdown">
                                    <span class="avatar avatar-sm"><img class="rounded-circle" src="~/images/Admin/avtAdmin.jpeg" width="31" alt="avatar" id="userAvt"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="px-3 py-2 d-flex align-items-center">
                                        <img src="~/images/Admin/avtAdmin.jpeg" alt="avatar" width="48" class="rounded-circle me-2" id="userAvt2">
                                        <div>
                                            <div id="TenDangNhap" class="fw-bold"></div>
                                            <div class="small text-muted" id="userRole"></div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-action="Index" asp-controller="ProfileCustomer">Trang cá nhân</a></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)">Cài đặt tài khoản</a></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="logout()" id="showLogout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <!-- Modals chung (đặt ở layout để reuse) -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true" style="z-index:1500;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card">
                <div class="modal-header alert-success">
                    <h5 class="m-0">Thành công</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body messageModal" id="successMessage"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true" style="z-index:1500;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card">
                <div class="modal-header alert-danger">
                    <h5 class="m-0">Lỗi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body messageModal" id="errorMessage"></div>
            </div>
        </div>
    </div>

    <main role="main" class="pb-4">
        @RenderBody()
    </main>

    <footer class="text-center small py-3">
        © @DateTime.Now.Year
    </footer>

    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/js/AdminCode.js"></script>
    <script src="~/js/StateCode.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
