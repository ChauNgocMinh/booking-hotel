@using HotelManagement.Controllers
@model PersonAndAccount
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-success text-white">
                    <h4>Đăng ký</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="SignUp" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- CCCD -->
                        <div class="mb-3">
                            <label asp-for="p.Cccd" class="form-label">CCCD</label>
                            <input asp-for="p.Cccd" class="form-control" placeholder="Nhập CCCD" required />
                        </div>

                        <!-- Họ và tên -->
                        <div class="mb-3">
                            <label asp-for="p.HoTen" class="form-label">Họ và tên</label>
                            <input asp-for="p.HoTen" class="form-control" placeholder="Nhập họ tên" required />
                        </div>

                        <!-- Tuổi -->
                        <div class="mb-3">
                            <label asp-for="p.Tuoi" class="form-label">Tuổi</label>
                            <input asp-for="p.Tuoi" class="form-control" type="number" placeholder="Nhập tuổi" required />
                        </div>

                        <!-- Giới tính -->
                        <div class="mb-3">
                            <label asp-for="p.GioiTinh" class="form-label">Giới tính</label>
                            <select asp-for="p.GioiTinh" class="form-select">
                                <option value="0">Nam</option>
                                <option value="1">Nữ</option>
                            </select>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="mb-3">
                            <label asp-for="p.NgaySinh" class="form-label">Ngày sinh</label>
                            <input asp-for="p.NgaySinh" class="form-control" type="date" required />
                        </div>

                        <!-- Địa chỉ -->
                        <div class="mb-3">
                            <label asp-for="p.DiaChi" class="form-label">Địa chỉ</label>
                            <input asp-for="p.DiaChi" class="form-control" placeholder="Nhập địa chỉ" required />
                        </div>

                        <!-- SĐT -->
                        <div class="mb-3">
                            <label asp-for="p.Sdt" class="form-label">Số điện thoại</label>
                            <input asp-for="p.Sdt" class="form-control" placeholder="Nhập số điện thoại" required />
                        </div>

                        <!-- Username / Email -->
                        <div class="mb-3">
                            <label asp-for="a.UserName" class="form-label">Email / User name</label>
                            <input asp-for="a.UserName" class="form-control" placeholder="Nhập email / username" required />
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="a.Password" class="form-label">Password</label>
                            <input asp-for="a.Password" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="confirm" class="form-label">Confirm Password</label>
                            <input asp-for="confirm" class="form-control" type="password" placeholder="Xác nhận mật khẩu" required />
                        </div>

                        <!-- Submit -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success">Đăng ký</button>
                        </div>

                        <div class="text-center">
                            Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Đăng nhập ngay</a><br />
                            <a asp-controller="Home" asp-action="Index">Quay lại màn hình chính</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
