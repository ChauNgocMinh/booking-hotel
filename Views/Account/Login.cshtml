@model HotelManagement.Models.TaiKhoan
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Đăng nhập</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Email / User name</label>
                            <input asp-for="UserName" class="form-control" placeholder="Nhập tên tài khoản" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                        </div>

                        <div class="mb-3 text-end">
                            <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>

                        <div class="text-center">
                            Chưa có tài khoản? <a asp-action="SignUp" class="text-decoration-none">Tạo ngay</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
