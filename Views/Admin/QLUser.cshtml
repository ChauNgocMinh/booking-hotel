@model IEnumerable<KhachHang>
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Quản lý khách hàng</h3>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height:72vh; overflow:auto;">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-light" style="position: sticky; top: 0; z-index: 1;">
                        <tr>
                            <th style="width:70px">STT</th>
                            <th>Person ID</th>
                            <th>Họ tên</th>
                            <th>Tuổi</th>
                            <th>Giới tính</th>
                            <th>SĐT</th>
                            <th class="text-center" style="width:200px">Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">Không có khách hàng.</td>
                            </tr>
                        }
                        else
                        {
                            var idx = 1;
                            foreach (var kh in Model)
                            {
                                // safe modal ids
                                var editId = "edit_kh_" + kh.KhachHangId;
                                var delId = "del_kh_" + kh.KhachHangId;
                                var person = kh.KhachHangNavigation;
                                <tr>
                                    <td>@(idx++)</td>
                                    <td>@person.PersonId</td>
                                    <td>@person.HoTen</td>
                                    <td>@person.Tuoi</td>
                                    <td>@(person.GioiTinh == 0 ? "Nam" : "Nữ")</td>
                                    <td>@person.Sdt</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#@editId">
                                                <i class="bi bi-pencil"></i> Sửa
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#@delId">
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal SỬA -->
                                <div class="modal fade" id="@editId" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <form method="post" asp-action="updateThongTinKhachHang" class="needs-validation" novalidate>
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Chỉnh sửa khách hàng - @person.PersonId</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>

                                                <div class="modal-body">
                                                    <input type="hidden" name="KhachHangId" value="@kh.KhachHangId" />
                                                    <div class="mb-3">
                                                        <label class="form-label">Person ID</label>
                                                        <input class="form-control" name="PersonId" value="@person.PersonId" required />
                                                        <div class="invalid-feedback">Vui lòng nhập Person ID.</div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="form-label">Họ tên</label>
                                                        <input class="form-control" name="HoTen" value="@person.HoTen" required />
                                                        <div class="invalid-feedback">Vui lòng nhập họ tên.</div>
                                                    </div>

                                                    <div class="row g-2">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Tuổi</label>
                                                            <input class="form-control" type="number" name="Tuoi" value="@person.Tuoi" min="0" required />
                                                            <div class="invalid-feedback">Vui lòng nhập tuổi hợp lệ.</div>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label">Giới tính</label>
                                                            <select class="form-select" name="GioiTinh" required>
                                                                <option value="0" selected="@(person.GioiTinh == 0 ? "selected" : null)">Nam</option>
                                                                <option value="1" selected="@(person.GioiTinh == 1 ? "selected" : null)">Nữ</option>
                                                            </select>
                                                            <div class="invalid-feedback">Chọn giới tính.</div>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="form-label">SĐT</label>
                                                        <input class="form-control" name="Sdt" value="@person.Sdt" required />
                                                        <div class="invalid-feedback">Vui lòng nhập số điện thoại.</div>
                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal XÓA -->
                                <div class="modal fade" id="@delId" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xóa khách hàng</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>Bạn có chắc muốn xóa khách hàng <strong>@person.HoTen</strong> (Person ID: @person.PersonId)?</p>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <a class="btn btn-danger" asp-action="xoaKhachHang" asp-route-personid="@kh.KhachHangId">Xác nhận</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
