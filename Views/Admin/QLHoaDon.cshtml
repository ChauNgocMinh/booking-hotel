@model IEnumerable<HotelManagement.Models.HoaDon>

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Danh sách hóa đơn</h3>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height:72vh; overflow:auto;">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th style="width:70px">STT</th>
                            <th>Mã hóa đơn</th>
                            <th>Ngày in</th>
                            <th>Tổng tiền</th>
                            <th>Mã order phòng</th>
                            <th class="text-center" style="width:160px">Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Không có hóa đơn nào
                                </td>
                            </tr>
                        }
                        else
                        {
                            int stt = 1;
                            foreach (var hd in Model)
                            {
                                var modalId = $"del_{hd.MaHoaDon}";

                                <tr>
                                    <td>@stt</td>
                                    <td>@hd.MaHoaDon</td>
                                    <td>
                                        @(hd.NgayIn?.ToString("dd/MM/yyyy HH:mm") ?? "")
                                    </td>
                                    <td>@hd.TongTien.ToString("N0")</td>

                                    <!-- ORDER PHÒNG -->
                                    <td>
                                        @hd.MaOrderPhongNavigation?.MaOrderPhong
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-action="ChiTietHoaDon"
                                               asp-route-maHoaDon="@hd.MaHoaDon">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <button class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#@modalId">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- MODAL XÓA -->
                                <div class="modal fade" id="@modalId" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xóa hóa đơn</h5>
                                                <button class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>
                                                    Bạn có chắc muốn xóa hóa đơn
                                                    <strong>@hd.MaHoaDon</strong>?
                                                </p>
                                                <p class="small text-muted">
                                                    Order phòng: @hd.MaOrderPhong
                                                </p>
                                            </div>

                                            <div class="modal-footer">
                                                <button class="btn btn-secondary" data-bs-dismiss="modal">
                                                    Hủy
                                                </button>
                                                <a class="btn btn-danger"
                                                   asp-action="XoaHoaDon"
                                                   asp-route-maHoaDon="@hd.MaHoaDon">
                                                    Xác nhận
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                stt++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
