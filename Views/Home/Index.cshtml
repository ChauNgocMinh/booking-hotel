@model TaiKhoan
<section class="ftco-booking ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-12">
                <form asp-action="Index" asp-controller="room" method="get" class="booking-form aside-stretch">
                    <div class="row">
                        <!-- Ngày nhận phòng -->
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label>Ngày nhận phòng</label>
                                    <input type="date" name="ngayden" class="form-control checkin_date"
                                           value="@Context.Request.Query["ngayden"]" placeholder="Ngày nhận phòng">
                                </div>
                            </div>
                        </div>

                        <!-- Ngày trả phòng -->
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label>Ngày trả phòng</label>
                                    <input type="date" name="ngaydi" class="form-control checkout_date"
                                           value="@Context.Request.Query["ngaydi"]" placeholder="Ngày trả phòng">
                                </div>
                            </div>
                        </div>

                        <!-- Loại phòng -->
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label>Loại phòng</label>
                                    <div class="form-field">
                                        <div class="select-wrap">
                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                            <select name="loaiphong" class="form-control">
                                                <option value="">Tất cả</option>
                                                @foreach (var lp in (IEnumerable<LoaiPhong>)ViewData["LoaiPhongs"])
                                                {
                                                    <option value="@lp.MaLoaiPhong"
                                                            selected="@(Context.Request.Query["loaiphong"] == lp.MaLoaiPhong)">
                                                        @lp.TenLoaiPhong
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Khách sạn -->
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label>Khách sạn</label>
                                    <div class="form-field">
                                        <div class="select-wrap">
                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                            <select name="khachsan" class="form-control">
                                                <option value="">Tất cả</option>
                                                @foreach (var ks in (IEnumerable<KhachSan>)ViewData["KhachSans"])
                                                {
                                                    <option value="@ks.MaKhachSan"
                                                            selected="@(Context.Request.Query["khachsan"] == ks.MaKhachSan)">
                                                        @ks.TenKhachSan
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Nút đặt phòng -->
                        <div class="col-md d-flex">
                            <div class="form-group d-flex align-self-stretch">
                                <button type="submit" class="btn btn-primary py-5 py-md-3 px-4 align-self-stretch d-block">
                                    <span>Đặt phòng ngay</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-wrap-about ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-7 order-md-last d-flex">
                <div class="img img-1 mr-md-2 ftco-animate" style="background-image: url('/images/about-1.jpg');"></div>
                <div class="img img-2 ml-md-2 ftco-animate" style="background-image: url('/images/about-2.jpg');"></div>
            </div>
            <div class="col-md-5 wrap-about pb-md-3 ftco-animate pr-md-5 pb-md-5 pt-md-4">
                <div class="heading-section mb-4 my-5 my-md-0">
                    <span class="subheading">Giới thiệu Khách sạn Harbor Lights</span>
                    <h2 class="mb-4">Khách sạn Harbor Lights – Lựa chọn được khuyến nghị hàng đầu trên toàn thế giới</h2>
                </div>
                <p>
                    Tọa lạc tại vị trí lý tưởng gần biển, Harbor Lights Hotel mang đến không gian nghỉ dưỡng sang trọng,
                    tiện nghi hiện đại và dịch vụ chuyên nghiệp, đáp ứng mọi nhu cầu lưu trú và nghỉ ngơi của khách hàng.
                </p>
                <p>
                    <a href="/Room" class="btn btn-secondary rounded">Đặt phòng ngay</a>
                </p>
            </div>
        </div>
    </div>
</section>

