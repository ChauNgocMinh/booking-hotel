@model IEnumerable<HotelManagement.Models.KhachSan>

@{
    ViewData["Title"] = "Danh sách khách sạn";
}

<h2 class="text-center my-4">Danh sách khách sạn</h2>

<div class="container my-4">
    @foreach (var ks in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="row g-0 align-items-center">

                <!-- Image -->
                <div class="col-md-3">
                    <img src="@ks.AnhDaiDien"
                         class="img-fluid rounded-start"
                         alt="@ks.TenKhachSan"
                         style="height:180px; width:100%; object-fit:cover;" />
                </div>

                <!-- Info -->
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title mb-2">@ks.TenKhachSan</h5>
                        <p class="card-text mb-1"><strong>Địa chỉ:</strong> @ks.DiaChi</p>
                        <p class="card-text mb-1"><strong>Điện thoại:</strong> @ks.SoDienThoai</p>
                        <p class="card-text mb-1"><strong>Email:</strong> @ks.Email</p>
                        <p class="card-text text-muted">@ks.MoTa</p>
                    </div>
                </div>

                <!-- Action -->
                <div class="col-md-2 text-center">
                    <a asp-controller="KhachSan"
                       asp-action="Detail"
                       asp-route-id="@ks.MaKhachSan"
                       class="btn btn-primary">
                        Xem chi tiết
                    </a>
                </div>

            </div>
        </div>
    }
</div>
