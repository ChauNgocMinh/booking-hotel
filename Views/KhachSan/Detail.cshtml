@model HotelManagement.Models.KhachSan

@{
    ViewData["Title"] = "Chi tiết khách sạn";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.AnhDaiDien" class="img-fluid rounded" alt="@Model.TenKhachSan" />
        </div>
        <div class="col-md-6">
            <h2>@Model.TenKhachSan</h2>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Điện thoại:</strong> @Model.SoDienThoai</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
        </div>
    </div>

    @if (Model.Phongs != null && Model.Phongs.Any())
    {
        <h3 class="mt-4">Danh sách phòng</h3>
        <div class="row">
            @foreach (var phong in Model.Phongs)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@phong.TenPhong</h5>
                            <p class="card-text">
                                <strong>Loại phòng:</strong> @phong.MaLoaiPhongNavigation?.TenLoaiPhong <br />
                                <strong>Giá:</strong> @phong.Gia.ToString("C0")
                            </p>
                            <a asp-controller="Room" asp-action="Detail" asp-route-id="@phong.MaPhong" class="btn btn-primary">
                                Xem phòng
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
