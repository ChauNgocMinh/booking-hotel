@model HotelManagement.Models.KhachSan

@{
    ViewData["Title"] = "Chi tiết khách sạn";
}

<div class="container my-5">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold">@Model.TenKhachSan</h1>
        </div>
    </div>

    <!-- Main content -->
    <div class="row g-4">

        <!-- Image -->
        <div class="col-md-6">
            <img src="@Model.AnhDaiDien"
                 class="img-fluid rounded shadow-sm"
                 alt="@Model.TenKhachSan"
                 style="width:100%; height:360px; object-fit:cover;" />
        </div>

        <!-- Info -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">

                    <h5 class="card-title mb-3">Thông tin khách sạn</h5>

                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <strong>📍 Địa chỉ:</strong> @Model.DiaChi
                        </li>
                        <li class="mb-2">
                            <strong>📞 Điện thoại:</strong> @Model.SoDienThoai
                        </li>
                        <li class="mb-2">
                            <strong>✉️ Email:</strong> @Model.Email
                        </li>
                    </ul>

                    <div class="mb-4">
                        <strong>Mô tả</strong>
                        <p class="text-muted mb-0">@Model.MoTa</p>
                    </div>

                    <!-- CTA -->
                    <a asp-controller="Room"
                       asp-action="Index"
                       asp-route-khachsan="@Model.MaKhachSan"
                       class="btn btn-primary btn-lg mt-auto w-100">
                        Xem danh sách phòng
                    </a>

                </div>
            </div>
        </div>

    </div>
</div>
