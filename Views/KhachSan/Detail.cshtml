@model HotelManagement.Models.KhachSan

@{
    ViewData["Title"] = "Chi tiết khách sạn";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.AnhDaiDien" class="w-100 rounded" alt="@Model.TenKhachSan" />
        </div>
        <div class="col-md-6">
            <h2>@Model.TenKhachSan</h2>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Điện thoại:</strong> @Model.SoDienThoai</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
        </div>
    </div>
    <a asp-controller="Room" asp-action="index" asp-route-khachsan="@Model.MaKhachSan" class="btn btn-primary">
        Xem danh sách phong
    </a>
</div>
